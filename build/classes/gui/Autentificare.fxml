<BorderPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guicontrollers.AutentificareController">
   <top>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="86.0" layoutY="94.0" text="Familia Mea">
               <font>
                  <Font name="DejaVu Sans ExtraLight" size="38.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_LEFT" contentDisplay="CENTER" text="Autentificare">
               <font>
                  <Font name="DejaVu Sans ExtraLight" size="24.0" />
               </font>
            </Label>
            <Label text="Utilizator">
               <font>
                  <Font name="DejaVu Sans ExtraLight" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="UtilizatorField" maxWidth="200.0" />
            <Label text="Parola">
               <font>
                  <Font name="DejaVu Sans ExtraLight" size="14.0" />
               </font>
            </Label>
            <PasswordField fx:id="ParolaField" maxWidth="200.0" />
            <ImageView fx:id="LoginButton" fitHeight="52.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true" onMouseReleased="#goToHomeScreen" >
               <image>
                  <Image url="@../icons/login.png" />
               </image>
            </ImageView>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="LoginButtonVBox" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="120.0" spacing="10.0">
               <children>
                  <ImageView fx:id="LoginImage" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/user.png" />
                     </image>
                  </ImageView>
                  <Label text="Autentificare">
                     <font>
                        <Font name="DejaVu Sans ExtraLight" size="12.0" />
                     </font>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox fx:id="RegisterButtonVBox" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="120.0" spacing="10.0">
               <children>
                  <ImageView fx:id="RegisterButtonImage" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/register.png" />
                     </image>
                  </ImageView>
                  <Label text="Inregistrare">
                     <font>
                        <Font name="DejaVu Sans ExtraLight" size="12.0" />
                     </font>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox fx:id="ForgotPassButtonVBox" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="120.0" spacing="10.0">
               <children>
                  <ImageView fx:id="ForgotPassButtonImage" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/key.png" />
                     </image>
                  </ImageView>
                  <Label text="Ai uitat parola?">
                     <font>
                        <Font name="DejaVu Sans ExtraLight" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
